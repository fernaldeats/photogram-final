<h1>List of users</h1>

<table border="1">
  <tr>
    <th>
      Username
    </th>

    <th>Private?</th>
    <th></th>
    <th></th>
  </tr>

  <% @list_of_users.each do |a_user| %>

    <tr>
      <td>
        <%= a_user.username %>
      </td>

      <td>
        <% if a_user.private %>
        <%= "Yes" %>
        <% else %>
        <%= "No" %>
        <% end %>
      </td>

      <td>
      <% if user_signed_in? %>
         <% matching_requests = FollowRequest.where({ :sender_id => current_user.id, :recipient_id => a_user.id }) %>
         <% if matching_requests.count > 0 %>
            <% the_request = matching_requests.at(0) %>
            <% if the_request.fetch("status") == "accepted" %>
              <a href="/delete_follow_request/<%= the_request.id %>">
                Unfollow
              </a>
            <% else %>
            Request sent.
            <a href="/delete_follow_request/<%= the_request.id %>">
                  Cancel
                </a>
            <% end %>
        <% else %>
          <form action="/insert_follow_request" method="post">
          <input type="hidden" name="query_recipient_id" value="<%= a_user.id %>">
          <button>
              Follow
              </button>
            </form>
        <% end %>
      <% else %>
      <%= "" %>
      <% end %>
     </td>

      <td>
        <a href="/users/<%= a_user.username %>">
          Show details
        </a>
      </td>

    </tr>
  <% end %>
</table>

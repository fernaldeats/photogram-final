<h1><%= @the_user.username %></h1>

<dl>
  <dt>Private</dt>
  <dd><% if @the_user.private %>
        <%= "true" %>
        <% else %>
        <%= "false" %>
        <% end %>
  </dd>

  <dt>Followers</dt>
  <dd>
    <%= @the_user.followers.count %>
    <div>
         <% matching_requests = FollowRequest.where({ :sender_id => current_user.id, :recipient_id => @the_user.id }) %>
         <% if matching_requests.count > 0 %>
            <% the_request = matching_requests.at(0) %>
            <% if the_request.fetch("status") == "accepted" %>
              <a href="/delete_follow_request/<%= the_request.id %>">
                Unfollow
              </a>
            <% else %>
            Request sent.
            <a href="/delete_follow_request/<%= the_request.id %>">
                  Cancel
                </a>
            <% end %>
        <% else %>
          <form action="/insert_follow_request" method="post">
          <input type="hidden" name="query_recipient_id" value="<%= @the_user.id %>">
          <button>
              Follow
              </button>
            </form>
        <% end %>
    </div>
  </dd>

  <dt>Following</dt>
  <dd><%= @the_user.leaders.count %></dd>
</dl>

<nav>
  <ul>
    <li>
      <a href="/users/<%= @the_user.username %>">Profile</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/liked_photos">Liked photos</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/feed">Feed</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/discover">Discover</a>
    </li>
  </ul>
</nav>

<h2>Own photos (<%= @the_user.own_photos.count %>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
      Likes
    </th>

    <th>
    </th>
  </tr>

  <% @the_user.own_photos.each do |a_photo| %>

    <tr>
      <td>
        <img src=<%= a_photo.image %>>
      </td>

      <td>
        <%= a_photo.poster.username %>
      </td>

      <td>
        <%= a_photo.caption %>
      </td>

      <td>
         <%= time_ago_in_words(a_photo.created_at) %> ago
      </td>

      <td>
         <%= a_photo.likes_count %>
      </td>

      <td>
        <a href="/photos/<%= a_photo.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>
